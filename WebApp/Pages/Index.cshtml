@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="text-center">
    <br />
    RH Soluciones Logísticas
</h1>
<div id="RH"
     class="carousel slide"
     data-ride="carousel" tylesheet="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#RH"
            data-slide-to="0"
            class="active"></li>
        <li data-target="#RH"
            data-slide-to="1"></li>
        <li data-target="#RH"
            data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Assets/template/img/RHSL1.png"
                 alt="RH" />
        </div>

        <div class="carousel-item">
            <img src="~/Assets/template/img/RHSL2.png"
                 alt="RH" />
        </div>

        <div class="carousel-item">
            <img src="~/Assets/template/img/RHSL3.png"
                 alt="RH" />
        </div>
    </div>

    <a class="carousel-control-prev"
       href="#RH"
       data-slide="prev">
        <span class="carousel-control-prev-icon">
        </span>
    </a>
    <a class="carousel-control-next"
       href="#RH"
       data-slide="next">
        <span class="carousel-control-next-icon">
        </span>
    </a>
</div>

@section Scripts{
    <script>
        var myCarousel = document.querySelector('#myCarousel')
        var carousel = new boosted.Carousel(myCarousel, {
            interval: 2000,
            wrap: true
        })
    </script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
            integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
            crossorigin="anonymous">
    </script>

    <style>
        .carousel-indicators .active {

            background-color: blue;
        }

        .carousel {
            margin: 0 auto;
            width: 75%;
            max-height: 460px;
        }

        .carousel-item > img {
            width: 100%;
            max-height: 460px;
        }
        .carousel-indicators li {
            background-color: burlywood;
        }
    </style>

}
